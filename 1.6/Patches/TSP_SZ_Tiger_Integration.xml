<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>/Defs/ThingDef[defName="Leather_DongBeiHu"]</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="CK_Tiger"]/race/leatherDef</xpath>
      <success>Always</success>
      <value>
        <leatherDef>Leather_DongBeiHu</leatherDef>
      </value>
    </match>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>/Defs/ThingDef[defName="LaoHu_HuaNan"]/race/useMeatFrom</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="LaoHu_HuaNan"]/race/useMeatFrom</xpath>
      <success>Always</success>
      <value>
        <useMeatFrom>CK_Tiger</useMeatFrom>
      </value>
    </match>
    <!-- If it does, add this instead. -->
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="LaoHu_HuaNan"]/race</xpath>
      <success>Always</success>
      <value>
        <useMeatFrom>CK_Tiger</useMeatFrom>
      </value>
    </nomatch>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
