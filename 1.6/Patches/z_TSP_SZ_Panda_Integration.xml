<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>Defs/ThingDef[defName="PanDa_JiDi"]</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="CK_Panda"]/race/leatherDef</xpath>
      <success>Always</success>
      <value>
        <leatherDef>PanDa_Leather</leatherDef>
      </value>
    </match>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>Defs/ThingDef[defName="PanDa_JiDi"]</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="CK_Panda"]/race/useMeatFrom</xpath>
      <success>Always</success>
      <value>
        <useMeatFrom>PanDa_JiDi</useMeatFrom>
      </value>
    </match>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>Defs/ThingDef[defName="PanDa_JiDi"]</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="Panda"]/race/leatherDef</xpath>
      <success>Always</success>
      <value>
        <leatherDef>PanDa_Leather</leatherDef>
      </value>
    </match>
    <!-- If it DOES NOT, add this instead. -->
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName="Panda"]/race</xpath>
      <success>Always</success>
      <value>
        <leatherDef>Leather_Bear</leatherDef>
      </value>
    </nomatch>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>Defs/ThingDef[defName="PanDa_JiDi"]</xpath>
    <!-- If it does, do this replacement. -->
    <match Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="Panda"]/race/useMeatFrom</xpath>
      <success>Always</success>
      <value>
        <useMeatFrom>PanDa_JiDi</useMeatFrom>
      </value>
    </match>
	<!-- If it DOES NOT, add this instead. -->
	<nomatch Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Panda"]/race</xpath>
		<success>Always</success>
		<value>
			<useMeatFrom>Bear_Grizzly</useMeatFrom>
		</value>
	</nomatch>
    <!-- If the first XPATH does not exist, the original code stands. -->
  </Operation>
  <Operation Class="PatchOperationConditional">
    <!-- DO THE GENTILES KNOW? -->
    <xpath>Defs/ThingDef[defName="PanDa_Leather"]</xpath>
    <!-- If they do, SHUT IT DOWN. -->
    <match Class="PatchOperationRemove">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="CK_LeatherPanda"]</xpath>
    </match>
    <!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
  </Operation>
</Patch>
