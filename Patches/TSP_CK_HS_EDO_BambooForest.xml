<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<xpath>/Defs/ThingDef[defName="CK_PlantTreeBamboo"]/plant/wildBiomes/HSBambooForest</xpath>
			<success>Always</success>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. All according to plan. -->
	</Operation>
	
    <Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<xpath>/Defs/BiomeDef/wildPlants/CK_PlantTreeBamboo</xpath>
			<success>Always</success>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. All according to plan. -->
	</Operation>
	
    <Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd">
			<xpath>/Defs/BiomeDef[defName="HSBambooForest"]/wildPlants</xpath>
			<success>Always</success>
			<value>
				<CK_PlantTreeBamboo>0.9</CK_PlantTreeBamboo>
			</value>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. -->
	</Operation>
	
    <Operation Class="PatchOperationConditional">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove">
			<xpath>/Defs/ThingDef[defName="CK_Panda"]/race/wildBiomes/HSBambooForest</xpath>
			<success>Always</success>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. All according to plan. -->
	</Operation>
	
    <Operation Class="PatchOperationConditional" MayRequire="mlie.tropickapprainforestmod">
	<!-- DO THE GENTILES KNOW? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If they do, SHUT IT DOWN. -->
		<match Class="PatchOperationRemove" MayRequire="mlie.tropickapprainforestmod">
			<xpath MayRequire="mlie.tropickapprainforestmod">/Defs/BiomeDef/wildAnimals/CK_Panda</xpath>
			<success MayRequire="mlie.tropickapprainforestmod">Always</success>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. All according to plan. -->
	</Operation>
	
    <Operation Class="PatchOperationConditional" MayRequire="mlie.tropickapprainforestmod">
	<!-- Does this exist? -->
		<xpath>/Defs/BiomeDef[defName="HSBambooForest"]</xpath>
		<!-- If it does, add this. -->
		<match Class="PatchOperationAdd" MayRequire="mlie.tropickapprainforestmod">
			<xpath>/Defs/BiomeDef[defName="HSBambooForest"]/wildAnimals</xpath>
			<success MayRequire="mlie.tropickapprainforestmod">Always</success>
			<value>
				<CK_Panda>1</CK_Panda>
			</value>
		</match>
		<!-- If the first XPATH does not exist, then the original code stands. -->
	</Operation>
</Patch>